<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="learning_custom_order_counter" resource="default" engine="innodb" comment="Custom Order Counter Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="entity_type" nullable="false" length="32" comment="Entity Type"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" default="0" comment="Store ID"/>
        <column xsi:type="int" name="counter_value" unsigned="true" nullable="false" default="1" comment="Counter Value"/>
        <column xsi:type="date" name="last_reset_date" nullable="true" comment="Last Reset Date"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="unique" referenceId="LEARNING_CUSTOM_ORDER_COUNTER_ENTITY_TYPE_STORE_ID">
            <column name="entity_type"/>
            <column name="store_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="LEARNING_CUSTOM_ORDER_COUNTER_STORE_ID_STORE_STORE_ID"
                    table="learning_custom_order_counter" column="store_id"
                    referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>

        <index referenceId="LEARNING_CUSTOM_ORDER_COUNTER_ENTITY_TYPE" indexType="btree">
            <column name="entity_type"/>
        </index>

        <index referenceId="LEARNING_CUSTOM_ORDER_COUNTER_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
