                    <source_model>Learning\CustomOrderNumber\Model\Config\Source\ResetFrequency</source_model>
                    <comment>Select counter to change on day, month or yearly basis to reset.</comment>
                    <depends>
                        <field id="learning_custom_order_number/general/enabled">1</field>
                        <field id="same_as_order">0</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
