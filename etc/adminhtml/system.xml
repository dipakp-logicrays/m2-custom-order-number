                        <field id="learning_custom_order_number/general/enabled">1</field>
                        <field id="same_as_order">0</field>
                    </depends>
                </field>

                <field id="increment_step" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Counter Increment Step</label>
                    <validate>validate-digits validate-greater-than-zero</validate>
                    <comment>Enter the increment step for the next credit memo number.</comment>
                    <depends>
                        <field id="learning_custom_order_number/general/enabled">1</field>
                        <field id="same_as_order">0</field>
                    </depends>
                </field>

                <field id="padding" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Counter Padding</label>
                    <validate>validate-digits validate-zero-or-greater</validate>
                    <comment>Total digits for the credit memo number, padded with leading zeros.</comment>
                    <depends>
                        <field id="learning_custom_order_number/general/enabled">1</field>
                        <field id="same_as_order">0</field>
                    </depends>
                </field>

                <field id="reset_counter" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
