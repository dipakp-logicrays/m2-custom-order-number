                    <depends>
                        <field id="learning_custom_order_number/general/enabled">1</field>
                    </depends>
                </field>

                <field id="format" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom Shipment Number Format</label>
                    <backend_model>Learning\CustomOrderNumber\Model\Config\Backend\ValidateFormat</backend_model>
                    <comment><![CDATA[Enter the shipment number format that you want to set (counter variable is must). You can use variables {counter}, {yyyy}, {yy}, {mm}, {dd}. If you type SHIP-{yy}-{mm}-{dd}-{counter} in the field, you will have shipment numbers of the kind: SHIP-13-08-15-000077]]></comment>
                    <depends>
                        <field id="learning_custom_order_number/general/enabled">1</field>
